{
  "compilerOptions": {
    "inlineSourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es2020",
    "incremental": true,
//    "removeComments": true,
    "allowJs": true,
    "allowUnreachableCode": false,
    "alwaysStrict": false,
    "pretty": true,

    "stripInternal": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "src/*",
    "src/**/*", "tests"
  ]
}
